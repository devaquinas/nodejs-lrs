{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id" : "xAPI#",
    "description": "schema for an statement in the xAPI",
    "type": "object",
    "properties": {
        "id" : {
            "$ref" : "UUID"
        },
        "actor" : {
            "oneOf" : [ 
                { "$ref" : "Agent" },
                { "$ref" : "Group" }
            ]
        },
        "verb" : {
            "type" : "object",
            "properties" : {
                "id" : {
                    "type" : "string",
                    "format" : "uri"
                },
                "display" : {
                    "$ref" : "LanguageMap"
                }
            },
            "additionalProperties" : false,
            "required" : ["id"]
        },
        "object" : {
            "type" : "object"
        }
    },
    "required" : ["actor", "verb", "object"]
}