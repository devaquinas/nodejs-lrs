Server = require '../../../app/server.coffee'
config = require '../../../app/config.coffee'

dbCounter = 0

module.exports.setup = ->
  config.server.port = false
  config.database.name = 'nodejs-lrs-test-' + dbCounter++
  config.database.reset = true
  configClone = JSON.parse JSON.stringify config
  new Server(configClone).getRestifyServer()

dbController = require('../../../app/database/dbcontroller')

beforeEach (done) =>
  dbController.setup config.database